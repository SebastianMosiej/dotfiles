[global]
#    font = Cousine 10
    font = Monospace 10

    # The format of the message. Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    format = "%a\n%s\n %b"

    sort = yes
    indicate_hidden = yes
    alignment = center
    bounce_freq = 0
    show_age_threshold = 60;

    word_wrap = yes

    geometry = "300x0-0+20"
    transparency = 0

    idle_threshold = 20

    monitor = 0
    follow = none

    sticky_history = yes
    line_height = 1

    separator_height = 2;

    separator_color = auto

    padding = 1
    horizontal_padding = 9

[frame]
    width=1
    color="#aaaaaa"

