bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# # Media player controls
bindsym XF86AudioPlay exec playerctl play-pause; exec notify-send -t 1 "Play/Pause"
bindsym XF86AudioPause exec playerctl pause; exec notify-send -t 1 "Pause"
bindsym XF86AudioNext exec playerctl next; exec notify-send -t 1 "Play next track"
bindsym XF86AudioPrev exec playerctl previous; exec notify-send -t 1 "Play previous track"
bindsym XF86AudioStop exec playerctl stop; exec notify-send -t 1 "Stop"
bindsym XF86Tools exec --no-startup-id spotify-client


