set $mode_tools (s) screenshot, (t) filemanager, (n) BT Mouse connect, (l) laptop docking, (b) WH Connnect, (m) WH BT Audio profile
mode "$mode_tools" {
    bindsym s exec "scrot -u ~/screenshots/Screenshot%Y-%m-%d%H:%M:%S.png", mode "default"
    bindsym t exec thunar, mode "default"
    bindsym l exec --no-startup-id autorandr, exec --no-startup notify-send -t 1 "Autorandr executed ...", mode "default"
    bindsym o exec --no-startup-id "xrandr -d :0 --output HDMI-1  --off; xrandr -d:0 --output DP2 --off", mode "default"
    bindsym b exec --no-startup-id "~/bin/connect_bluetooth_dev.sh 88:C9:E8:76:6A:76 38:18:4C:24:FF:E8 &", exec notify-send -t 1 "BT Connecting...", mode "default"
    bindsym n exec --no-startup-id "~/bin/connect_bluetooth_dev.sh C8:60:89:00:02:02 &", exec notify-send -t 1 "BT Mouse Connecting...", mode "default"
    bindsym m exec --no-startup-id "pactl set-card-profile $(pactl list cards | grep 88_C9_E8_76_6A_76 -B 2 | grep Card | cut -d '#' -f 2) a2dp_sink", mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+o mode "$mode_tools"


set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    #bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym l exec --no-startup-id i3lock -c 282828, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"

